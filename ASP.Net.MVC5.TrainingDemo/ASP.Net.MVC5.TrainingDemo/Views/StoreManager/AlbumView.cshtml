
@{
    ViewBag.Title = "AlbumView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Demo.Domain.AlbumViewModel
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>AlbumView</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-7" style="height:600px; margin-top:30px;">
            <img width="450" height="450" src="~/images/album.png" class="img-circle" />
        </div>
        <div class="col-md-5" style="height:600px;">
            <div class="panel panel-default">
                <div class="panel-heading">Title</div>
                <div class="panel-body">
                    @Html.TextBoxFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Artist</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Genre</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(model => model.GenreName, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">PublishDate</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(model => model.PublicDate, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Price</h3>
                </div>
                <div class="panel-body">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
        </div>

    </div>
    <div class="row" style="margin-top:20px">
        <div class="col-md-2" style="width:30%"></div>
        <div class="col-md-4" style="width:20%">
            <button id="Buy" type="submit" class="btn btn-danger " style="margin-left:10px;width:90px">Buy</button>
        </div>
        <div class="col-md-6" style="width:50%">
            <div class="col-md-8">
                <a href="#" class="btn btn-danger" style="margin-left:10px;width:90px">Cart</a>
            </div>
        </div>
    </div>
    <div>

        @Html.ActionLink("Back", "Store")
    </div>
</div>
    

